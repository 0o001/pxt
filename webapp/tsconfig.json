{
    "compilerOptions": {
        "target": "es5",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "module": "commonjs",
        "outDir": "../built/webapp",
        "rootDir": ".",
        "newLine": "LF",
        "sourceMap": false,
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "preserveConstEnums": true,
        "lib": [
            "dom",
            "dom.iterable",
            "scripthost",
            "es6"
        ],
        "types": [
            "react",
            "react-dom",
            "bluebird"
        ],
        "incremental": false,
    },
    "exclude": [
        "node_modules"
    ],
    "references": [
        {
            "path": "../pxteditor"
        },
        {
            "path": "../pxtlib"
        },
        {
            "path": "../pxtcompiler"
        },
        {
            "path": "../pxtpy"
        },
        {
            "path": "../pxtblocks"
        },
        {
            "path": "../pxtsim"
        },
        {
            "path": "../pxtrunner"
        },
        {
            "path": "../pxteditor"
        },
        {
            "path": "../pxtwinrt"
        },
    ]
}